#modal-shortcuts.modal{ tabindex: -1 }
  .modal-dialog
    .modal-content
      .modal-header
        %a.close{ href: "#", "data-dismiss" => "modal" } ×
        %h4
          键盘快捷键
          %small
            = link_to '(显示全部)', '#', class: 'js-more-help-button'
      .modal-body
        .row
          .col-lg-4
            %table.shortcut-mappings
              %tbody
                %tr
                  %th
                  %th 全局快捷键
                %tr
                  %td.shortcut
                    .key s
                  %td 定位到搜索框
                %tr
                  %td.shortcut
                    .key f
                  %td 定位到过滤框
                %tr
                  %td.shortcut
                    .key ?
                  %td 显示/隐藏本对话框
                %tr
                  %td.shortcut
                    - if browser.platform.mac?
                      .key &#8984; shift p
                    - else
                      .key ctrl shift p
                  %td 切换 Markdown 预览
                %tr
                  %td.shortcut
                    .key
                      %i.fa.fa-arrow-up
